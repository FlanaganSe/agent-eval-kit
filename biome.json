{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"useConst": "error",
				"noDefaultExport": "warn"
			},
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.config.ts"],
			"linter": { "enabled": false }
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"files": {
		"includes": [
			"src/**",
			"vitest.config.ts",
			"test/**",
			"!!**/dist",
			"!!**/node_modules",
			"!!**/.eval-fixtures",
			"!!**/.eval-runs"
		]
	}
}
