{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"verbatimModuleSyntax": true,
		// isolatedDeclarations disabled: Zod schema inference types are too complex to annotate manually.
		// Re-enable if we switch to a build tool that benefits from it (oxc, swc).
		// "isolatedDeclarations": true,
		"erasableSyntaxOnly": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
